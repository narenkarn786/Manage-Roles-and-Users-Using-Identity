@model IEnumerable<IdentityUser>
@{
    ViewBag.Title = "All Users";


}

<h1>All Users</h1>
@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="Register">
        Add New User
    </a>

    foreach (var user in Model)
    {
        <br />
        <div class="card mb-3">
            <div class="card-header">
                User Id:@user.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" method="post" asp-route-id="@user.Id">
                    <a asp-action="EditUser" asp-controller="Administrator" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No Users Created
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the above button to create role
            </h5>

        </div>
    </div>
}
